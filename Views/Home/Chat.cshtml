<style>
    div.panel-body {
        overflow-y: auto;
        background-color: azure;
    }
</style>

<h2>Welcome @(Request.IsAuthenticated ? ViewBag.UserName : "Guest") - This is best live chat room in the web!</h2>
<div class="chat-panel panel panel-default" style="display:flex;align-items:center;flex-direction: column;">
    <div class="panel-heading">
        <i class="fa fa-paper-plane fa-fw"></i>
    </div>
    <!-- /.panel-heading -->
    <div class="panel-body" id="chat">
        <div id="discussion"></div>
        <input type="hidden" id="displayname" />
        <input type="hidden" id="gender" />
    </div>
    <!-- /.panel-body -->
    <div class="panel-footer">
        <div class="input-group">
            <input id="message" type="text" name="message" class="form-control input-sm" placeholder="Type your message here..." />

            <span class="input-group-btn">
                <input type="button" class="btn btn-warning btn-sm" id="sendmessage" value="Send">

            </span>
        </div>
    </div>
</div>

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("Logout", "User", FormMethod.Post, new { id = "logoutForm" }))
    {
        <a href="javascript:document.getElementById('logoutForm').submit()">Logout</a>
    }
}

@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.3.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <!--SignalR script to update the chat page and send messages.-->
    <script>
        $(function () {
            // Reference the auto-generated proxy for the hub.
            var chat = $.connection.chatHub;

            // Some variables for differentiate users
            var position = "right";
            var name = "@Model.UserName"
            var gender = "@Model.Gender"

            // Add the message to the page.
            chat.client.addNewMessageToPage = function (name, message, gender, value) {

                if (name != "@Model.UserName") {
                    position = "left";
                }
                else {
                    position = "right";
                }

                $('#discussion').append('<div style="width:60%;float:' + position + ';">' +
                    '<img style="float:'+position+';" src="https://www.phplivesupport.com/pics/icons/avatars/public/avatar_' + (gender == "Male" ? 1 : 2) + '.png" title=' + name + '>'+
                    '<p style = "text-align:' + position + ';float:'+position+';" class= "message" > ' + htmlEncode(message) + '</p ></div>');
               
                $("#discussion").append("<div style='clear:both'/>")
                $(".panel-body").animate({ scrollTop: $('.panel-body').prop("scrollHeight") }, 1000);
            }
            // Get the user name and store it to prepend to messages.
            $('#displayname').val(name);
            $('#gender').val(gender);

            // Set initial focus to message input box.
            $('#message').focus();

            // Start the connection.
            $.connection.hub.start().done(function () {
                $('#sendmessage').click(function () {
                    // Call the Send method on the hub.
                    chat.server.send(name, $('#message').val(), gender);
                    // Clear text box, scroll down and reset focus for next comment.
                    $('#message').val('').focus();
                });
            });

            //if enter then click send message button
            $('#message').keydown(function (event) {
                if (event.keyCode == 13) {
                    $('#sendmessage').trigger('click');
                }
            });
        });
        // This optional function html-encodes messages for display in the page.
        function htmlEncode(value) {
            var encodedValue = $('<div />').text(value).html();
            return encodedValue;
        }
    </script>
}